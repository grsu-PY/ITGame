@model IEnumerable<ITGame.Models.Entities.Spell>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SpellType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SchoolSpell)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MagicalPower)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManaCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalDuration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Equipped)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SpellType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SchoolSpell)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MagicalPower)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ManaCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalDuration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Equipped)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
