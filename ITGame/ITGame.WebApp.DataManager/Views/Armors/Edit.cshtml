                @Html.ValidationMessageFor(model => model.PhysicalDef, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MagicalDef, htmlAttributes: new { @class = "control-label col-md-2" })
